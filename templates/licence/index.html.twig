{% extends 'base.html.twig' %}

{% block title %}Licence index{% endblock %}

{% block body %}
    <h1>Licence index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>Information</th>
                <th>Horaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for licence in licences %}
            <tr>
                <td>{{ licence.id }}</td>
                <td>{{ licence.titre }}</td>
                <td>{{ licence.prix }}</td>
                <td>{{ licence.information }}</td>
                <td>{{ licence.horaire }}</td>
                <td>
                    <a href="{{ path('app_licence_show', {'id': licence.id}) }}">show</a>
                    <a href="{{ path('app_licence_edit', {'id': licence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_licence_new') }}">Create new</a>
{% endblock %}
