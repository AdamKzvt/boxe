{% extends 'base.html.twig' %}

{% block title %}Boxeur index{% endblock %}

{% block body %}
    <h1>Boxeur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ImageName</th>
                <th>NomPrenom</th>
                <th>Information</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for boxeur in boxeurs %}
            <tr>
                <td>{{ boxeur.id }}</td>
                <td>{{ boxeur.imageName }}</td>
                <td>{{ boxeur.nomPrenom }}</td>
                <td>{{ boxeur.information }}</td>
                <td>
                    <a href="{{ path('app_boxeur_show', {'id': boxeur.id}) }}">show</a>
                    <a href="{{ path('app_boxeur_edit', {'id': boxeur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_boxeur_new') }}">Create new</a>
{% endblock %}
